<!-- Because name and logoURL come from user content, they cannot fully be trusted.
   To avoid even the remote possibility of an XSS attack, we write the src and rp_name
   using Javascript methods so that adding DOM Event handlers is mitigated.
-->

<% if(logoURL) { %>
  <img id="rp_logo" src="" />
<% } %>


<% if(name) { %>
  <h2 id="rp_name"></h2>
<% } %>

<!-- hostname is generated internally and is trusted -->
<% if(hostname) { %>
  <% if(name) { %>
    <h3 id="rp_hostname"><%= hostname %></h3>
  <% } else { %>
    <h2 id="rp_hostname"><%= hostname %></h2>
  <% } %>
<% } %>

