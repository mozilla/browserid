<% if(siteLogo) { %>
  <img id="rp_logo" src="<%= siteLogo %>" />
<% } %>


<% if(siteName) { %>
  <h2 id="rp_name"><%= siteName %></h2>
<% } %>

<% if(hostname) { %>
  <% if(siteName) { %>
    <h3 id="rp_hostname"><%= hostname %></h3>
  <% } else { %>
    <h2 id="rp_hostname"><%= hostname %></h2>
  <% } %>
<% } %>

